@model List<SmallUsedCars_WebApp.ViewModels.ReportRankingViewModel>

@if (Model.Any())
{
    <h3 class="mt-5 mb-3 fs-4">Sales Ranking</h3>
    <p class="fs-5 text-muted">Period: @ViewData["StartDate"] ~ @ViewData["EndDate"]</p>

    <table class="table table-bordered fs-4">
        <thead>
            <tr>
                <th>Rank</th>
                <th>Employee</th>
                <th>Total Sales</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].EmployeeName</td>
                    <td>$@Model[i].TotalAmount.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No data available.</p>
}

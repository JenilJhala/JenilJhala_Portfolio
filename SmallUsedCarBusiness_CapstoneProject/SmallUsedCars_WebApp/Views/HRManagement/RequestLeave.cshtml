@model SmallUsedCars_WebApp.Models.RequestLeaveViewModel

@{
    ViewData["Title"] = "Request Leave";
}

<h2>Request Leave for @Model.EmployeeName</h2>

<form asp-action="RequestLeave" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    <input type="hidden" asp-for="EmployeeName" />

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LeaveType" class="form-label"></label>
        <input asp-for="LeaveType" class="form-control" placeholder="Vacation, Sick, etc." />
        <span asp-validation-for="LeaveType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Reason" class="form-label"></label>
        <textarea asp-for="Reason" class="form-control"></textarea>
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

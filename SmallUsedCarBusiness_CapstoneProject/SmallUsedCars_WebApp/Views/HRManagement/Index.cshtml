@model SmallUsedCars_WebApp.Models.HRManagementIndexViewModel

@{
    ViewData["Title"] = "Employees Info";
}

<h2>Employees Info</h2>

<p>
    <a asp-action="LeaveRequests" class="btn btn-danger">Leave Requests</a>
</p>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var emp in Model.Employees)
    {
        <div class="col">
            <div class="card shadow-sm">
                <svg class="bd-placeholder-img card-img-top" width="100%" height="180"
                     xmlns="http://www.w3.org/2000/svg" role="img"
                     aria-label="Placeholder: Employee Photo"
                     preserveAspectRatio="xMidYMid slice"
                     focusable="false">
                    <title>@emp.EmployeeName</title>
                    <rect width="100%" height="100%" fill="#868e96"></rect>
                    <text x="50%" y="50%" fill="#dee2e6" dy=".3em" text-anchor="middle">No Photo</text>
                </svg>
                <div class="card-body text-center">
                    <h5 class="card-title">@emp.EmployeeName</h5>
                    <p class="card-text">
                        <strong>Position:</strong> @emp.Position <br />
                        <strong>Department:</strong> @emp.Department
                    </p>
                    <a asp-action="RequestLeave" asp-route-employeeId="@emp.Id" class="btn btn-primary btn-sm">Request Leave</a>
                    <a asp-action="PromoteEmployee" asp-route-employeeId="@emp.Id" class="btn btn-success btn-sm">Promote</a>
                </div>
            </div>
        </div>
    }
</div>
